<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ljh.vhr.mapper.MenuMapper">

    <resultMap id="loadMenu" type="com.ljh.vhr.entity.Menu">
        <id property="id" column="id" />
        <result property="url" column="url" />
        <result property="path" column="path" />
        <result property="component" column="component" />
        <result property="name" column="name" />
        <result property="iconCls" column="iconCls" />
        <result property="parentId" column="parentId" />
        <result property="enabled" column="enabled" />
        <association property="meta" javaType="com.ljh.vhr.entity.Meta" >
            <result property="keepalive" column="keepalive" />
            <result property="requireAuth" column="requireAuth" />
        </association>
        <collection property="children" ofType="com.ljh.vhr.entity.Menu" column="id" select="queryMenuByParentId" />
    </resultMap>

    <select id="loadMenuByUserId">

    </select>

    <select id="queryMenuByParentId">
        SELECT
            *
        FROM
            menu
        WHERE
            parentId = #{id}
    </select>
</mapper>